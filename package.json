{
  "name": "shared-secret-encrypt",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.tsx",
  "module": "src/index.tsx",
  "scripts": {
    "dev": "bun --hot src/index.tsx",
    "build": "bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "build:pages": "bun build ./src/index.html --outdir=dist --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*' && echo 'App build completed for GitHub Pages'",
    "start": "NODE_ENV=production bun src/index.tsx",
    "preview": "cd dist && python3 -m http.server 3000"
  },
  "dependencies": {
    "react": "^19",
    "react-dom": "^19",
    "shamir-secret-sharing": "^0.0.4",
    "bs58": "^6.0.0"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest"
  }
}
